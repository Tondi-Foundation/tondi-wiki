---
import "@/styles/global.css";

import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="zh-CN" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Tondi Wiki - 下一代高性能区块链技术文档" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Tondi Wiki</title>
        
        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
        
        <!-- Meta tags for SEO -->
        <meta property="og:title" content="Tondi Wiki" />
        <meta property="og:description" content="Tondi Wiki - 下一代高性能区块链技术文档" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://wiki.tondi.org" />
        
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="Tondi Wiki" />
        <meta name="twitter:description" content="Tondi Wiki - 下一代高性能区块链技术文档" />
        
        <ClientRouter />
    </head>
    <body class="bg-dark-990 text-white font-sans antialiased">
        <div class="min-h-screen bg-gradient-to-br from-dark-990 via-dark-975 to-dark-990">
            <slot />
        </div>
        
            <!-- Enhanced Background Effects -->
            <div class="fixed inset-0 pointer-events-none overflow-hidden">
                <!-- Rotating Geometric Shapes -->
                <div class="geometric-shape absolute top-20 left-20 w-16 h-16 border border-primary-400/20 rounded-lg opacity-30"></div>
                <div class="geometric-shape absolute bottom-20 right-20 w-12 h-12 border border-primary-300/25 rounded-full opacity-25"></div>
                <div class="geometric-shape absolute top-1/3 right-1/4 w-8 h-8 border border-primary-400/15 rounded-lg opacity-20"></div>
                <div class="geometric-shape absolute bottom-1/3 left-1/4 w-10 h-10 border border-primary-300/20 rounded-full opacity-25"></div>

                <!-- Cyber Pulse Rings -->
                <div class="pulse-ring absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 border border-primary-400/10"></div>
                <div class="pulse-ring absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 border border-primary-300/15"></div>
                <div class="pulse-ring absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 border border-primary-400/20"></div>

                <!-- Enhanced Gradient overlays -->
                <div class="absolute top-0 left-0 w-full h-full gradient-overlay-top"></div>
                <div class="absolute bottom-0 right-0 w-full h-full gradient-overlay-bottom"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full gradient-overlay-center"></div>

                <!-- Additional cyber elements -->
                <div class="absolute top-1/4 right-1/4 w-24 h-24 border border-primary-400/5 rounded-full animate-cyber-pulse opacity-20"></div>
                <div class="absolute bottom-1/4 left-1/4 w-20 h-20 border border-primary-300/8 rounded-lg animate-rotate-slow opacity-15"></div>
            </div>
    </body>
</html>

<style is:global>
  html {
    font-family: 'Nunito Sans', system-ui, sans-serif;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #0f172a;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #facc15;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #eab308;
  }
  
  /* Selection color */
  ::selection {
    background: #facc15;
    color: #0f172a;
  }
  
  /* Smooth transitions */
  * {
    transition: all 0.3s ease;
  }
</style>
